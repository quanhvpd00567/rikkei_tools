<% if @employee.errors.any? %>
  <% @employee.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<%= form_for @employee, html: {class: "nifty_form"} do |f| %>
<div class="form-group">
    <label>Employee code</label>
    <%= f.text_field :code, {class: 'form-control', placeholder: 'Enter employee code'} %>
  </div>
  <div class="form-group">
    <label>Employee name</label>
    <%= f.text_field :name, {class: 'form-control', placeholder: 'Enter employee name'} %>
  </div>
  <div class="form-group">
    <label>Employee name</label>
    <%= f.select( "role", Employee.roles.collect {|p| [ p.first, p.last ] }, {:selected =>  @employee.role},{ class:"form-control" })%>
  </div>
  <div class="form-group">
    <label>Employee name</label>
    <%= f.select( "level", Employee.levels.collect {|p| [ p.first, p.last ] }, {:selected =>  @employee.level},{ class:"form-control" })%> 
  </div>

  <%= f.submit 'Submit', {class: 'btn btn-primary'} %>
<% end %>